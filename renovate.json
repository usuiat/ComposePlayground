{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["main", "alpha"],
  "packageRules": [
    {
      "matchBaseBranches": ["main"],
      "matchPackageNames":["androidx.compose.*"],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+$/"
    },
    {
      "matchBaseBranches": ["alpha"],
      "matchPackageNames":["androidx.compose.*"],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+-alpha[0-9]+$/"
    }
  ]
}
